const gear = [
];

const combinations = [];

for (const head of gear.filter(item => item.type === 'head')) {
  for (const arms of gear.filter(item => item.type === 'arms')) {
    for (const body of gear.filter(item => item.type === 'body')) {
      for (const legs of gear.filter(item => item.type === 'legs')) {
        combinations.push([head, arms, body, legs]);
      }
    }
  }
}

console.log(combinations);


