<!DOCTYPE html>
<html>
  <head>
    <title>MSBL Character Selector</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      /* Style the button */
      .dropbtn {
        background-color: #4CAF50;
        color: white;
        padding: 16px;
        font-size: 16px;
        border: none;
        cursor: pointer;
        position: absolute;
        top: 0;
        right: 0;
      }

      /* Style the dropdown content */
      .dropdown-content {
        display: none;
        position: absolute;
        z-index: 1;
      }

      /* Style the links inside the dropdown */
      .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
      }

      /* Change color of dropdown links on hover */
      .dropdown-content a:hover {
        background-color: #f1f1f1;
      }

      /* Show the dropdown menu on hover */
      .dropdown:hover .dropdown-content {
        display: block;
      }

      /* Change the background color of the dropdown button when the dropdown content is shown */
      .dropdown:hover .dropbtn {
        background-color: #3e8e41;
      }
      
      /* Style the check mark */
      .checkmark {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        right: 20px;
      }
      
      /* Style the selected character box */
      .selected-characters {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        right: 150px;
        font-size: 16px;
        color: white;
      }
    </style>
  </head>
  <body>

    <div class="dropdown">
      <button class="dropbtn">Character Selection</button>
      <div class="dropdown-content">
        <a href="#" onclick="toggleCheck('mario')">Mario<span id="mario-check" class="checkmark"></span></a>
        <a href="#" onclick="toggleCheck('luigi')">Luigi<span id="luigi-check" class="checkmark"></span></a>
        <a href="#" onclick="toggleCheck('bowser')">Bowser<span id="bowser-check" class="checkmark"></span></a>
      </div>
      <div class="selected-characters" id="selected-characters"></div>
    </div>

    <script>
      // Initialize selected characters array
      var selectedCharacters = [];

      function toggleCheck(characterName) {
        // Get the checkmark element for this character
        var checkmark = document.getElementById(characterName + "-check");
        // Toggle the checkmark
        checkmark.innerHTML = checkmark.innerHTML == "&check;" ? "" : "&#10003;";
        
        // Add or remove the character from the selected characters array
        if (selectedCharacters.includes(characterName)) {
          selectedCharacters.splice(selectedCharacters.indexOf(characterName), 1);
        } else {
          selectedCharacters.push(characterName);
        }
        
        // Update the selected characters box
        var selectedCharactersBox = document.getElementById("selected-characters");
        if (selectedCharacters.length > 0) {
          selectedCharactersBox.innerHTML = selectedCharacters.length + " selected";
        } else {
          selectedCharactersBox.innerHTML = "";
        }
        
        // Hide the dropdown
        var dropdownContent = document.querySelector(".dropdown-content");
        dropdownContent.style.display = "none";
      }
    </script>

  </body
