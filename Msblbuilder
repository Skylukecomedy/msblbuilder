<!DOCTYPE html>
<html>
  <head>
    <title>MSBL Character Selector</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      /* Style the button */
      .dropbtn {
        background-color: #4CAF50;
        color: white;
        padding: 16px;
        font-size: 16px;
        border: none;
        cursor: pointer;
        position: absolute;
        top: 0;
        right: 0;
      }

      /* Style the dropdown content */
      .dropdown-content {
        display: none;
        position: absolute;
        z-index: 1;
      }

      /* Style the links inside the dropdown */
      .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
      }

      /* Change color of dropdown links on hover */
      .dropdown-content a:hover {
        background-color: #f1f1f1;
      }

      /* Show the dropdown menu on hover */
      .dropdown:hover .dropdown-content {
        display: block;
      }

      /* Change the background color of the dropdown button when the dropdown content is shown */
      .dropdown:hover .dropbtn {
        background-color: #3e8e41;
      }

      /* Highlight selected character name in blue */
      .selected {
        background-color: blue;
        color: white;
      }

    </style>
  </head>
  <body>

    <div class="dropdown">
      <button class="dropbtn">Character Selection</button>
      <div class="dropdown-content">
        <a href="#" id="mario">Mario</a>
        <a href="#" id="luigi">Luigi</a>
        <a href="#" id="bowser">Bowser</a>
      </div>
    </div>

    <script>
      var selected = [];

      // Function to update selected characters and button text
      function updateSelected() {
        // Update button text with number of selected characters
        var button = document.querySelector(".dropbtn");
        if (selected.length == 0) {
          button.textContent = "Character Selection";
        } else if (selected.length == 1) {
          button.textContent = selected[0];
        } else {
          button.textContent = selected.length + " characters selected";
        }

        // Highlight selected character names
        var links = document.querySelectorAll(".dropdown-content a");
        links.forEach(function(link) {
          if (selected.includes(link.textContent)) {
            link.classList.add("selected");
          } else {
            link.classList.remove("selected");
          }
        });
      }

      // Add event listeners to character links
      var mario = document.getElementById("mario");
      var luigi = document.getElementById("luigi");
      var bowser = document.getElementById("bowser");

      mario.addEventListener("click", function(event) {
        event.preventDefault();
        if (selected.includes("Mario")) {
          selected.splice(selected.indexOf("Mario"), 1);
        } else {
          selected.push("Mario");
        }
        updateSelected();
      });

      luigi.addEventListener("click", function(event) {
        event.preventDefault();
        if (selected.includes("Luigi")) {
          selected.splice(selected.indexOf("Luigi"), 1);
        } else {
          selected.push("Luigi");
        }
        updateSelected();
      });

      bowser.addEventListener("click", function(event) {
        event.preventDefault();
        if (
