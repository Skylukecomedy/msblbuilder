
<!DOCTYPE html>
<html>
  <head>
    <title>MSBL Character Selector</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      /* Style the button */
      .dropbtn {
        background-color: #4CAF50;
        color: white;
        padding: 16px;
        font-size: 16px;
        border: none;
        cursor: pointer;
        position: absolute;
        top: 0;
        right: 0;
      }

      /* Style the dropdown content */
      .dropdown-content {
        display: none;
        position: absolute;
        z-index: 1;
      }

      /* Style the links inside the dropdown */
      .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
      }

      /* Change color of dropdown links on hover */
      .dropdown-content a:hover {
        background-color: #f1f1f1;
      }

      /* Show the dropdown menu on hover */
      .dropdown:hover .dropdown-content {
        display: block;
      }

      /* Change the background color of the dropdown button when the dropdown content is shown */
      .dropdown:hover .dropbtn {
        background-color: #3e8e41;
      }

      /* Highlight selected character names */
      .dropdown-content .selected {
        background-color: #ADD8E6;
      }
    </style>
    <script>
      // Get the button and dropdown content elements
      var button = document.getElementsByClassName("dropbtn")[0];
      var dropdownContent = document.getElementsByClassName("dropdown-content")[0];

      // Get all the character names in the dropdown content
      var characterNames = dropdownContent.getElementsByTagName("a");

      // Add an onclick event listener to each character name
      for (var i = 0; i < characterNames.length; i++) {
        characterNames[i].addEventListener("click", function() {
          // Toggle the "selected" class to highlight/unhighlight the character name
          this.classList.toggle("selected");

          // Update the button text with the number of selected characters
          var selectedNames = dropdownContent.getElementsByClassName("selected");
          if (selectedNames.length == 0) {
            button.innerHTML = "Character Selection";
          } else if (selectedNames.length == 1) {
            button.innerHTML = selectedNames[0].innerHTML;
          } else {
            button.innerHTML = selectedNames.length + " characters selected";
          }
        });
      }
    </script>
  </head>
  <body>

    <div class="dropdown">
      <button class="dropbtn">Character Selection</button>
      <div class="dropdown-content">
        <a href="#">Mario</a>
        <a href="#">Luigi</a>
        <a href="#">Bowser</a>
      </div>
    </div>

  </body>
</html>
