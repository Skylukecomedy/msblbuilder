<script>

// Get the 'Mario' link element
  const marioLink = document.querySelector('.character-name[href="#"]:first-child');

  // Add an event listener for click event
  marioLink.addEventListener('click', () => {
    // Add a 'clicked' class to the 'Mario' link element
    marioLink.classList.add('clicked');

    // Remove the 'Mario' link element from the DOM after a short delay
    setTimeout(() => {
      marioLink.remove();
    }, 500); // Delay of 500 milliseconds (0.5 seconds)
  });

</script>

	
