<!DOCTYPE html>
<html>
  <head>
    <title>MSBL Character Selector</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      /* Style the button */
      .dropbtn {
        background-color: #4CAF50;
        color: white;
        padding: 16px;
        font-size: 16px;
        border: none;
        cursor: pointer;
        position: absolute;
        top: 0;
        right: 0;
      }

      /* Style the dropdown content */
      .dropdown-content {
        display: none;
        position: absolute;
        z-index: 1;
      }

      /* Style the links inside the dropdown */
      .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
      }

      /* Change color of dropdown links on hover */
      .dropdown-content a:hover {
        background-color: #f1f1f1;
      }

      /* Show the dropdown menu on hover */
      .dropdown:hover .dropdown-content {
        display: block;
      }

      /* Change the background color of the dropdown button when the dropdown content is shown */
      .dropdown:hover .dropbtn {
        background-color: #3e8e41;
      }

      /* Highlight selected items */
      .dropdown-content a.selected {
        background-color: #0074D9;
        color: #FFF;
      }

      /* Display number of selected items */
      .dropdown .num-selected {
        font-size: 14px;
        color: #777;
        display: none;
        position: absolute;
        top: 25px;
        right: 10px;
      }

      /* Show number of selected items when at least one item is selected */
      .dropdown.has-selected .num-selected {
        display: block;
      }
    </style>
  </head>
  <body>

    <div class="dropdown">
      <button class="dropbtn">Character Selection</button>
      <div class="dropdown-content">
        <a href="#">Mario</a>
        <a href="#">Luigi</a>
        <a href="#">Bowser</a>
      </div>
      <div class="num-selected"></div>
    </div>

    <script>
      // Get the dropdown and links
      var dropdown = document.querySelector('.dropdown');
      var links = dropdown.querySelectorAll('.dropdown-content a');

      // Initialize selected array
      var selected = [];

      // Add event listeners to links
      for (var i = 0; i < links.length; i++) {
        links[i].addEventListener('click', function(event) {
          event.preventDefault();

          // Toggle selected class
          if (this.classList.contains('selected')) {
            this.classList.remove('selected');
            selected.splice(selected.indexOf(this.innerHTML), 1);
          } else {
            this.classList.add('selected');
            selected.push(this.innerHTML);
          }

          // Update number of selected items
          var numSelected = dropdown.querySelector('.num-selected');
          numSelected.innerHTML = selected.length + ' selected';
          dropdown.classList.toggle('has-selected', selected.length > 0);
        });
      }
    </script>

  </body>
</html>
